// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Streamlit (in container)",
      "type": "debugpy",
      "request": "launch",
      "program": "/usr/local/bin/streamlit",
      "args": [
        "run",
        "app/main.py",
        "--server.address=0.0.0.0",
        "--server.port=8501"
      ],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    }
    
  ]
}
